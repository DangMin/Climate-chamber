.display
  >div
    height 100%
  table
    height 100%
    width 96%
    margin 0 2% 0 2%
    font-size 14px
    td
      text-align right
      padding-right 5px

.meter
  &__container
    display flex
    align-items center
    align-content center
  &--large
    font-size 3.6em
    font-family SevenSegment
    text-align center
    border base-border
    width 96%
    margin 0 2% 0

.signal-tag
  margin 5px 10px
  background-color #000
  color white
  font-weight bold
  border-radius 50%
  &--active
    background-color red
