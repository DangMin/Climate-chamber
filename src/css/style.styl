.no-padding
  padding 0
  div
    padding 0

.no-gutters
  margin-right 0
  margin-left 0
  .col, [class*="col-"]
    padding-right 0
    padding-left 0

.button
  &__group
    display flex
    button
      flex 1

set-txt-vertical(n)
  line-height n

.flexbox
  display flex
  text-align center
  &__cell
    &-1
      flex 1
    &-2
      flex 2
    &-3
      flex 3
  &--column
    flex-direction column
  &--row
    flex-direction row
    width 100%

@import "components/sidebar.styl"
@import "components/container.styl"
@import "components/user-profile.styl"
@import "components/home.styl"
@import "components/programs.styl"
